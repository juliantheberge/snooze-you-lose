{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "outDir": "sdist",
    "module": "es6",
    "target": "es5",
    "sourceMap":true,
    "baseUrl":".",
    "typeRoots": ["node_modules/@types", "./src/types/"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tsDist",
    "dist",
    "webpack.config.js",
    "test",
    "coverage"
  ],
  "include": [
    "src/**/*",
    "views",
    "public"
  ],
}
