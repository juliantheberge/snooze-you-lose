<div class="flex pageWrapper">
  <div class="flex column userWrapper">
    <h3 class="formTitle">user info</h3>
    {{# if success}}
      <form action="/" method="get">
        <p>email</p>
        <p class="inputMimic">{{ email }}</p>

        <p>phone #</p>
        <p class="inputMimic">{{ phone }}</p>

        <p>password</p>
        <p class="inputMimic"> success </p>

        <button class="yes" type="submit"> log in </button>
      </form>
      <form class="flex center" action="/" method="get">
        <button class="flex center back" type="submit">
       <img class="icon" src="https://image.flaticon.com/icons/svg/53/53567.svg" />
     </button>
      <h4>account created!</h4>

      {{ else }}

      <form action="/accounts" method="post">
        <p>email</p>
        <input id="email" name="email" class="userFormItem" type="text" placeholder="email" />
        <p class="formErrorReport" id="emailError"></p>

        <p>phone #</p>
        <input id="phone" name="phone" class="userFormItem numericOnly" type="text" placeholder="phone" />
        <p class="formErrorReport" id="phoneError"></p>

        <p>password</p>
        <input id="password" name="password" class="userFormItem" type="password" placeholder="" />
        <p class="formErrorReport" id="passwordError"></p>

        <p>confirm password</p>
        <input id="confirmPassword" name="confirmPassword" class="userFormItem" type="password" placeholder="" />
        <p class="formErrorReport" id="confirmPasswordError"></p>
        <button id="formSubmitter" class="unavailable submit" type="submit"> create account </button>
      </form>
      <form class="flex center" action="/" method="get">
        <button class="flex center back" type="submit">
       <img class="icon" src="https://image.flaticon.com/icons/svg/53/53567.svg" />
     </button>
      {{/if}}
      <p class="formErrorReport">{{ dbError }}</p>
      </form>
  </div>
</div>
<script src="/behavior/account-action.js"></script>
