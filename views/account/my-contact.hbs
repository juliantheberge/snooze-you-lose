<div class='app-content'>
    <div class = 'full-page'>
      <div class ="flex column add-alarm-form">
        
        <form action="/app/accounts/:{{ user.profile.email}}/contact?_method=PUT" method="post">
          <p><b>name: </b>{{  user.profile.name }}</p>
          <input name="name" class="big-form-item" type="text" value= {{ user.profile.name}}>

          <p><b>email: </b>{{  user.profile.email }}</p>
          <input name="email" class="big-form-item" type="text" value= {{ user.profile.email}}>

          <p><b>phone: </b>{{ user.profile.phone }}</p>
          <input id="phone" name="phone" class="big-form-item numericOnly" type="text" value= {{ user.profile.phone }}>
          <p class="formErrorReport" id="phoneError"></p>
          <input type="hidden" name="prevTitle" value="{{ title }}" />
          <p class="formErrorReport" id="awakeError"></p>
          <button class="button light-button" type="submit"> submit </button>
        </form>
        <p class="formErrorReport">{{ dbError }}</p>
      </div>
    </div>
  </div>
</div>
