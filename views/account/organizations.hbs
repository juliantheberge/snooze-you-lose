<div id='app'>
  <div class='app-wrapper'>
    <ul class="app-menu">
      <div class='app-menu-title-wrapper'>
        <img class='formIcon fadeIn' src='/icons/logo-placeholder.svg' />
        <h1 class='app-menu-title'>s.y.l.</h1>
      </div>
      <li class='app-menu-li'>
        <img class='formIcon fadeIn' src='/icons/white/clock-alarm.svg' />
        <a href="/app/accounts/{{email}}/alarms" class='app-menu-text'>alarms</a>
      </li>

      <li class='app-menu-li'>
        <img class='formIcon fadeIn' src='/icons/white/squares.svg' />
        <a href="/app/accounts/{{email}}/orgs" class='app-menu-text '>organizations</a>
      </li>

      <li class='app-menu-li'>
        <img class='formIcon fadeIn' src='/icons/white/graph-bar.svg' />
        <a href="/app/accounts/{{email}}/insights" class='app-menu-text-disabled disabled-a'>insights</a>
      </li>

      <li class='app-menu-li'>
        <img class='formIcon fadeIn' src='/icons/white/user-fem.svg' />
        <a href="/app/accounts/{{email}}/profile" class='app-menu-text-disabled disabled-a'>profile</a>
      </li>

      <li class='app-menu-li'>
        <img class='formIcon fadeIn' src='/icons/white/mixer.svg' />
        <a href="/app/accounts/{{email}}/settings" class='app-menu-text-disabled disabled-a'>settings</a>
      </li>

      <li class='app-menu-li' id='logout'>
        <img class='formIcon fadeIn' src='/icons/white/back-1.svg' />
        <form action="/log-out" method="post">
          <button type="submit" class="app-menu-text">logout</button>
        </form>
      </li>

    </ul>
    <div class="app-content">
      <div class="full-page">
        <h1>My Organizations</h1>
        <p>
          This is where you can view your organizations and set them to alarms for the month.
        </p>
        {{#if defaultSet}}
        <h4>
          currently donating to:
        </h4>
        <div class='categoryListWrapper boxBorder'>
      
          <div class="flex column" id='{{frontEndID}}'>
            <div class="flex product-name-price-wrapper">
              <h3 class="product-title">{{ name }}</h3>
              <p class="small">{{ cause }}</p>
            </div>
      
            <div class="flex description-img-wrapper">
              <div class="flex column">
                <p class="description-text">{{ description }}</p>
                <a href='{{link}}'>link to the website</a>
              </div>
      
              <div class="organization-img">
                <img src="/product-pictures/{{ image }}" />
              </div>
            </div>
            <div class="flex product-action-wrapper">
              <form class="flex product-cart-form" action="/accounts/{{email}}/organizations/{{org_sku}}?_method=PUT" method="post">
                <input type="hidden" name="org_uuid" value="{{ org_uuid }}" />
                <button class='yes'>remove default</button>
              </form>
            </div>
          </div>
        </div>
        {{else}}
        <div class='boxBorder padding'>
          <h4>
            Not currently donating to any org.
          </h4>
          <p class='button-titles'>
            Add an organization from your saved orgs below or go to the organization area from the home menu.
          </p>
        </div>
        {{/if}}
        <h4>
          saved organizations:
        </h4>
        <div class="categoryListWrapper">
          {{#each organizationContent}} {{> my-organizationsdiv}} {{/each}}
        </div>
        <p class="formErrorReport">{{ dbError }}</p>
        <p class='fromErrorReport'>
          {{error}}
        </p>
        <form action="/home" method="get">
          <button class="no " type="submit"> home </button>
        </form>
      </div>      
      <script src="/behavior/alarm-display.js"></script>

    </div>
  </div>
</div>

{{!-- variables unchanged --}}
