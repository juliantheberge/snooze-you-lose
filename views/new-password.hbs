<div class="flex pageWrapper">
  <div class="flex column userWrapper">
   <h3 class="formTitle">password reset</h3>
   {{# if success}}
     <form action="/to-login" method="get">

       <p>password</p>
       <p class="inputMimic"> success </p>

       <button class="yes" type="submit"> log in </button>
     </form>
     <h4>account created!</h4>
     <form action="/to-log-out" method="get">
       <button class="no" type="submit"> home page </button>
     </form>

   {{ else }}
     <form action="/auth/change-password" method="post">
       <p>password</p>
       <input
        id="password"
        name="password"
        class="userFormItem"
        type="password"
        placeholder=""
        />
       <p class="formErrorReport" id="passwordError"></p>

       <p>confirm password</p>
       <input
        id="confirmPassword"
        name="confirmPassword"
        class="userFormItem"
        type="password"
        placeholder=""
        />
       <p class="formErrorReport" id="confirmPasswordError"></p>
         <button id="formSubmitter" class="unavailable submit" type="submit"> change password </button>
      </form>
     {{/if}}
   <p class="formErrorReport">{{ dbError }}</p>
  </div>
 </div>
 <script src="/behavior/formAction.js"></script>
