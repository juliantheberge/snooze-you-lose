<div class="flex pageWrapper">
  <div class="flex column userWrapper">
   <h3 class="formTitle">user info</h3>

   <form action="/to-account-actions" method="post">
     <p>email</p>
     <input
      id="email"
      name="email"
      class="userFormItem"
      type="text"
      placeholder="email"/>
     <p class="formErrorReport" id="emailError"></p>

     <p>password</p>
     <input
      id="passwordLogin"
      name="password"
      class="userFormItem"
      type="password"
      placeholder=""
      />
     <p class="formErrorReport" id="passwordError"></p>

    <button id="formSubmitter" class="unavailable submit" type="submit"> sign in </button>
   <p class="formErrorReport">{{ dbError }}</p>
  </div>
 </div>
 <script src="/behavior/formAction.js"></script>
