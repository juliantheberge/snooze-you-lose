<div class="full-page">
  <div class="flex column add-alarm-form">
    <h3 class="formTitle">edit alarm</h3>
      <form action="/app/accounts/:email/alarms/:{{title}}?_method=PUT" method="post">
        <p><b>title: </b>{{ title }}</p>
        <input
         id="title"
         name="title"
         class="userFormItem"
         type="text"
         value= "{{ title }}"
         placeholder="work week"
         />
        <p class="formErrorReport" id="titleError"></p>

        <p><b>time: </b>{{ time }}</p>
        <input
         id="time"
         name="time"
         class="userFormItem"
         type="text"
         value= "{{ time }}"
         placeholder="06:00"
         />
         <p><b>active:
         </b>
         {{#if active}}
            currently on<br/>
            <input type="radio" name="active" value='t' checked>keep on<br/>
            <input type="radio" name="active" value='f'>turn off<br/>

         {{else}}
            curently off<br/>
            <input type="radio" name="active" value='t'>turn on<br/>
            <input type="radio" name="active" value='f' checked>keep off<br/>
         {{/if}}

        </p>
        <input type="hidden" name="prevTitle" value="{{ title }}" />
        <p class="formErrorReport" id="timeError"></p>
       <button id="formSubmitter" class="unavailable submit" type="submit"> change </button>
   {{ dbError }}
  </div>
</div>
