<div class="full-page">
  <div class="flex column add-alarm-form">
    <h3 class="formTitle">add alarm</h3>
    <form action="/in-session/alarms/:{{title}}?_method=PUT" method="post">
      <p><b>title: </b>{{ title }}</p>
      <input
       id="title"
       name="title"
       class="userFormItem"
       type="text"
       value= {{ title }}
       placeholder="work week"
       />
      <p class="formErrorReport" id="titleError"></p>

      <p><b>time: </b>{{ awake }}</p>
      <input
       id="awake"
       name="awake"
       class="userFormItem"
       type="text"
       value= {{ awake }}
       placeholder="06:00"
       />
       <p><b>active:
       </b>
       {{#if active}}
          currently on<br/>
          <input type="radio" name="active" value='f'>turn off<br/>
       {{else}}
          curently off<br/>
          <input type="radio" name="active" value='t'>turn on<br/>
       {{/if}}
      </p>
      {{!-- <input type="radio" name="active" value='t'>On<br/>
      <input type="radio" name="active" value='f'>Off<br /> --}}
      <input type="hidden" name="prevTitle" value="{{ title }}" />
      <p class="formErrorReport" id="awakeError"></p>
     <button id="formSubmitter" class="unavailable submit" type="submit"> change </button>
   </form>
   {{ dbError }}
  </div>
</div>
<script src="/behavior/alarm-action.js"></script>
