<div class="flex pageWrapper">
  <div class="flex column userWrapper">
   <h3 class="formTitle">user info</h3>
   {{# if success}}
     <form action="/to-account-actions" method="get">
       <p>email</p>
       <p class="inputMimic">{{ cardNumber }}</p>

       <p>expiration</p>
       <div class="flex expirationWrapper">
        <p class="inputMimic shortField"> {{ expirationMonth }}
         <p class="expirationSlash"> / </p>
        <p class="inputMimic shortField"> {{ expirationDay }}
       </div>

       <p>billing country</p>
       <p class="inputMimic"> {{country}} </p>

       <p>ZIP code</p>
       <p class="inputMimic"> {{ zip }} </p>

       </p>
     </form>
     <h4>account created!</h4>
     <form action="/to-add-payment" method="get">
       <button class="no" type="submit"> add another payment </button>
     </form>

   {{ else }}
     <form action="/add-payment" method="post">
     <p>card number</p>
     <input id="cardNumber" class="userFormItem numericOnly" type="text" placeholder="put card number here" value ="" />
     <p class="formErrorReport" id="cardNumberError"></p>

     <p>expiration</p>
     <div class="flex expirationWrapper">
      <input id="expirationMonth" class="userFormItem numericOnly shortField" type="text" placeholder="MM" maxlength="2" />
       <p class="expirationSlash"> / </p>
      <input id="expirationDay" class="userFormItem numericOnly shortField" type="text" placeholder="DD" maxlength="2" />
     </div>
     <p class="formErrorReport" id="exiprationMonthError"></p>
     <p class="formErrorReport" id="exiprationDayError"></p>

     <p>billing country</p>
     <input id="country" class="userFormItem dropdownSearch" type="text" placeholder="country" value ="" />
     <p class="formErrorReport" id="countryError"></p>
     <div class="dropdownWrapper">
      <ul class="dropdownList"></ul>
     </div>

     <p>ZIP code</p>
     <input id="zipCode" class="userFormItem numericOnly" type="text" placeholder="ZIP" value ="" />
     <p class="formErrorReport" id="zipCodeError"></p>

     <button id="formSubmitter" class="unavailable submit"> log it</button>
     {{/if}}
   </form>
   <p class="formErrorReport">{{ dbError }}</p>
  </div>
 </div>
