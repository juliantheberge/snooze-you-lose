<div class="app-content">    
    <div class = 'top-row-wrapper'>
        <div class = 'top-row-search-bar'>
            <div class = 'search-wrapper'>
                <img class = 'icon-mini' src = '/icons/black/magnifying.svg'>
                <input type = 'text'>
            </div>
            <ul class = "org-filter-list">
                <li class = "org-filter-text">current</li>
                <li class = "org-filter-text">saved</li>
                <li class = "org-filter-text">explore</li>
                <a class = 'a' href = '/app/accounts/{{email}}/orgs/all'>
                  <li class="org-filter-text">all</li>
                </a>
                
            </ul>
        </div>
        <div class = 'top-row-time'>
            <p class = 'top-row-time-text small-text'>5:50:00AM</p>
            <p class = 'top-row-time-text small-text'>Monday, April 2, 2018</p>
        </div>
    </div>
    {{!-- <p>
        This is where you can select which organizations you would like to support, and which organizations you'd rather not.
    </p> --}}
    <div class="column searchWrapper">
        <div class="column contentWrapper">
            <h4 class = 'organization-subtitle'>current donation</h4>
            <div class="alarm-row">
                {{#if defaultSet}}
                <div class="flex column" id='{{frontEndID}}'>
                  <div class="flex product-name-price-wrapper">
                    <h3 class="org-titles">{{ name }}</h3>
                    <p class="small-text ">{{ cause }}</p>
                  </div>
                
                  <div class="org-img-description-wrapper">
                    <div class="org-description">
                      <p class="small-text">{{ description }}</p>
                      <div class="org-action-wrapper">
                        <a class='a' href="{{link}}">
                          <img class='icon-mini' src='/icons/black/link.svg'>
                        </a>
                        <a class='a' href="{{link}}">
                          <img class='icon-mini' src='/icons/black/share.svg'>
                        </a>
                        <form class='a' action="/app/accounts/{{email}}/orgs/{{org_sku}}?_method=PUT" method="post">
                          <input type="hidden" name="org_uuid" value="{{ org_uuid }}" />
                          <input type='image' class='icon-mini' src='/icons/black/star.svg'>
                        </form>
                        <form class='a' action="/app/accounts/{{email}}/orgs/" method="post">
                          <input type="hidden" name="org_uuid" value="{{ org_uuid }}" />
                          <input type='image' class='icon-mini' src='/icons/black/x.svg'>
                        </form>
                        <form class="flex product-cart-form" action="/app/accounts/{{email}}/orgs/{{org_sku}}?_method=PUT" method="post">
                          <input type="hidden" name="org_uuid" value="{{ org_uuid }}" />
                          <button class='yes'>remove default</button>
                        </form>
                      </div>
                    </div>
                    <div class='org-img-wrapper'>
                      <img class='org-img' src="/product-pictures/{{ img }}.jpg" />
                    </div>
                  </div>
                
                  {{!--
                  <form class="flex product-cart-form" action="/accounts/{{email}}/organizations" method="post">
                    <input type="hidden" name="org_uuid" value="{{ org_uuid }}" />
                    <button class="button ">save to my orgs</button>
                  </form> --}} {{!--
                  <form class="flex product-cart-form" action="/accounts/{{email}}/organizations/{{org_sku}}?_method=PUT" method="post">
                    <input type="hidden" name="org_uuid" value="{{ org_uuid }}" />
                    <button class='yes'>set as default</button>
                  </form> --}}
                </div>
                {{else}}
                <div class='boxBorder padding'>
                  <h4>
                    Not currently donating to any org.
                  </h4>
                  <p class='button-titles'>
                    Add an organization from your saved orgs below or go to the organization area from the home menu.
                  </p>
                </div>
                {{/if}}
            </div>
            {{!-- <h4 class = 'organization-subtitle'>saved organizations</h4>
            <div class="alarm-row">
                 {{#each organizationContent}} {{> my-organizationsdiv}} {{/each}}
            </div> --}}
            <h4 class='organization-subtitle'>saved organizations</h4>
            <div class="categoryListWrapper">
                {{#each organizationContent}} {{> organizationsdiv}} {{/each}}
            </div>
        </div>
        <p class="formErrorReport">{{ error }}</p>
    </div>    
    <p class="formErrorReport">{{ dbError }}</p>
</div>
